<!--Just for reference-->
<h1 class="text-center">Add a New Task</h1>
<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= form_for :task, url: '/tasks' do |f| %>

            <div class="form-group">
                <label for="tasks_title">Title</label>
                <input type="text" id="tasks_title" name="task[title]" class="form-control">
            </div>

            <div class="form-group">
                <label for="tasks_description">Description</label>
                <textarea name="task[description]" id="tasks_description" class="form-control" rows="10"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        <% end %>
    </div>
</div>

